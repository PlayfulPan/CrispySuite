@article{norteMechanicalResonatorsQuantum2016,
  title = {Mechanical {{Resonators}} for {{Quantum Optomechanics Experiments}} at {{Room Temperature}}},
  author = {Norte, R. A. and Moura, J. P. and Gröblacher, S.},
